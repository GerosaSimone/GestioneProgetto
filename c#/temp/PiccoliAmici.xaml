<Window x:Class="temp.PiccoliAmici"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:temp"
        mc:Ignorable="d"
        Title="PiccoliAmici" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Label Content="Squadra Piccoli Amici" HorizontalAlignment="Left" Height="37" Margin="10,10,0,0" VerticalAlignment="Top" Width="168"/>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="336" Margin="5,47,0,0" VerticalAlignment="Top" Width="785" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="grid_SelectionChanged"/>
        <Button x:Name="btnAggiungi" Content="Aggiungi Giocatore" HorizontalAlignment="Center" Margin="0,398,0,0" VerticalAlignment="Top" Width="141" Height="26" Click="btnAggiungi_Click"/>

    </Grid>
</Window>
